{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "esnext",
        "allowImportingTsExtensions": true,
        "outDir": "./dist"
    },
    "include": ["./src/**/*.ts", "./src/index.html"],
    "exclude": ["./node_modules", "./test"]
}
